<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:web='urn:import:com.github.gwtbootstrap.client.ui'
             >
    <g:DockLayoutPanel>
        <g:center>
            <g:ScrollPanel>
                <g:VerticalPanel spacing="10">
                    <g:HTMLPanel>
                        <web:ControlLabel ui:field="titleCard"/>
                        <web:ControlGroup ui:field="loginForm">
                            <web:ControlLabel ui:field="hostNameLabel"/>
                            <web:TextBox ui:field="hostNameTextBox"/>
                            <web:ControlLabel ui:field="grantTypeLabel"/>
                            <web:TextBox ui:field="grantTypeTextBox"/>
                            <web:ControlLabel ui:field="clientIdLabel"/>
                            <web:TextBox ui:field="clientIdTextBox"/>
                            <web:ControlLabel ui:field="tenantLabel"/>
                            <web:TextBox ui:field="tenantTextBox"/>
                            <web:ControlLabel ui:field="localeLabel"/>
                            <web:TextBox ui:field="localeTextBox"/>
                            <web:ControlLabel ui:field="redirectUrlLabel"/>
                            <web:TextBox ui:field="redirectUrlTextBox"/>
                            <web:ControlLabel ui:field="userNameLabel"/>
                            <web:TextBox ui:field="userNameTextBox"/>
                            <web:ControlLabel ui:field="passwordLabel"/>
                            <web:PasswordTextBox ui:field="passwordTextBox"/>
                            <g:Button ui:field="signInButton"/>
                            <g:Button ui:field="loginWithArisButton"/>
<!--                            <g:Button ui:field="userDetailsPageButton"/>-->
                        </web:ControlGroup>
                    </g:HTMLPanel>
                </g:VerticalPanel>
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>