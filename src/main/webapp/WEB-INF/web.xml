<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>redirectServlet</servlet-name>
    <servlet-class>com.aris.server.ProcessMiningServletImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>redirectServlet</servlet-name>
    <url-pattern>/umc/redirect</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>urlForwardingFilter</filter-name>
    <filter-class>com.aris.server.AdminURLForwardFilter</filter-class>
    <init-param>
    <param-name>uriWhitelist</param-name>
    <param-value>/umc/redirect.html, /umc/redirect</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>urlForwardingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

</web-app>
